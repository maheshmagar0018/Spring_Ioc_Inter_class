<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
            
            
            <bean id="myhorse" class="org.jsp.animal.Horse"></bean>
            <bean id="mycow" class="org.jsp.animal.Cow"></bean>
            <bean id="mydog" class="org.jsp.animal.Dog"></bean>
            <bean id="animalSound" class="org.jsp.animal.Animal_sound">
            <constructor-arg name="a" ref="mydog"></constructor-arg>
            </bean>
    

</beans>